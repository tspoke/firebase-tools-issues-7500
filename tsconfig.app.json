{
  "extends" : "@vue/tsconfig/tsconfig.dom.json",
  "include" : [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude" : [
    "src/**/__tests__/*"
  ],
  "compilerOptions" : {
    "resolveJsonModule" : true,
    "experimentalDecorators" : true,
    "emitDecoratorMetadata" : true,
    "declaration" : false,
    "strict" : false,
    "tsBuildInfoFile" : "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl" : ".",
    "paths" : {
      "@/*" : [
        "./src/*"
      ]
    }
  }
}
